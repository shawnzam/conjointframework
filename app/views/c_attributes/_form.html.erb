<%= simple_form_for(@c_attribute) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :display_order %>
    <%= f.association :choice_set %>
    <%= f.input :name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
