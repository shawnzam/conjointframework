<h1>Listing options</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>C attribute</th>
      <th>Display order</th>
      <th>Description</th>
      <th>Choice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td><%= option.name %></td>
        <td><%= option.c_attribute %></td>
        <td><%= option.display_order %></td>
        <td><%= option.description %></td>
        <td><%= option.choice %></td>
        <td><%= link_to 'Show', option %></td>
        <td><%= link_to 'Edit', edit_option_path(option) %></td>
        <td><%= link_to 'Destroy', option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

